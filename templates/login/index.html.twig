{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión UniOpinions{% endblock %}

{% block meta_description %}
    <meta name="description" content="Inicia sesión en UniOpinions y comienza a opinar sobre profesores y asignaturas de tu universidad.">
{% endblock %}

{% block main %}

    {% if error %}
        <div class="text-center text-red-500 text-3xl">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="text-center text-black dark:text-white text-5xl sm:text-6xl mb-7">Inicio de sesión</h1>

    <form action="{{ path('app_login') }}" method="post"
    class="text-black dark:text-white flex flex-col justify-center items-center ">
        <label for="username" class="text-4xl m-3">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"
        class="bg-slate-200 dark:bg-slate-800 rounded-md h-11 sm:w-[30rem] text-3xl p-3">

        <label for="password" class="text-4xl m-3">Contraseña:</label>
        <input type="password" id="password" name="_password"
        class="bg-slate-200 dark:bg-slate-800 rounded-md h-11 sm:w-[30rem] text-3xl p-3">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="mt-7 p-7 rounded-full bg-slate-200 dark:bg-slate-800 text-4xl">
            Iniciar sesión
        </button>

        <div class="flex flex-row text-2xl sm:text-3xl mt-7 text-center">
            <h2>
                ¿Todavía no tienes una cuenta? Regístrate 
                <a href="{{ path('app_register') }}"
                class="dark:text-blue-300 text-blue-500 ml-1">
                    aquí
                </a>
            </h2>
        </div>

        <div class="flex flex-row text-2xl sm:text-3xl mt-3 text-center">
            <h2>
                ¿Has olvidado tu contraseña? Restablécela
                <a href="{{ path('app_forgot_password_request') }}"
                class="dark:text-blue-300 text-blue-500 ml-1">
                    aquí
                </a>
            </h2>
        </div>
        
    </form>

{% endblock %}
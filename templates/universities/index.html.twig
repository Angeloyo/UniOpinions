{% extends 'base.html.twig' %}

{% block title %}UniOpinions | Universities{% endblock %}

{% block main %}

<h2 class="text-black dark:text-white text-xl">
    <a href="http://localhost:8000/universities">Universidades</a> 
</h2>

<ul class="text-center text-3xl dark:text-white text-black mt-11">
    {% for university in universities %}
        <li class="">
            <a href="{{ path('app_university', { universitySlug: university.getSlug }) }}">
                <button class="rounded-2xl p-5 my-4 bg-slate-200 dark:bg-slate-800 flex flex-row mx-auto">
                    {{ university.getName() }}
                </button>
            </a>
        </li>
    {% endfor %}
</ul>
    
{% endblock %}

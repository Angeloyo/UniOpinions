{% extends 'base.html.twig' %}

{% block title %}Universidades en UniOpinions{% endblock %}

{% block meta_description %}
    <meta name="description" content="Explora el directorio completo de universidades en UniOpinions.">
{% endblock %}

{% block main %}

<h2 class="text-black dark:text-white text-xl mb-7">
    <a class="my-1 inline-block" href="/universities"></a> 
</h2>

<h1 class="text-black dark:text-white text-5xl text-center my-7">
    Universidades
</h1>

<ul class="text-center text-xl  dark:text-white text-black mx-0 sm:mx-[19%]">
    {% for university in universities %}
        <li class="">
            <a href="{{ path('app_university', { universitySlug: university.getSlug }) }}" 
            
            class="rounded-2xl p-3 my-4 bg-slate-200 dark:bg-slate-800 flex flex-row 
                mx-auto hover:bg-slate-300 dark:hover:bg-slate-900 justify-center">
                {{ university.getName() }}
            </a>
        </li>
    {% endfor %}
    <li class="">
        <a href="{{ path('app_create_generic_opinion') }}" 
        class="rounded-2xl p-3 my-6 bg-slate-200 dark:bg-slate-800 flex flex-row 
            mx-auto hover:bg-slate-300 dark:hover:bg-slate-900 justify-center">
            ¿Quieres opinar sobre un profesor o asignatura pero no está aquí tu universidad? Haz click en este botón.
        </a>
    </li>
</ul>
    
{% endblock %}